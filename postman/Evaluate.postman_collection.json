{
  "info": {
    "name": "AdCompass - Evaluate",
    "_postman_id": "adcompass-evaluate",
    "description": "Collection for Evaluate endpoint. Uses {{baseUrl}} and collection variables {{brandId}}, {{ruleId}}, {{assetPath}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "brandId", "value": "", "type": "string" },
    { "key": "ruleId", "value": "", "type": "string" },
    { "key": "assetPath", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Evaluate (multipart: file upload)",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/evaluate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "evaluate"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "brandId",
              "type": "text",
              "value": "{{brandId}}"
            },
            {
              "key": "ruleId",
              "type": "text",
              "value": "{{ruleId}}"
            },
            {
              "key": "asset",
              "type": "file",
              "src": "{{assetPath}}"
            }
          ]
        },
        "description": "Uploads an image file (JPG/PNG â‰¤10MB) and evaluates it. Returns full JSON from upstream (n8n)."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('OK', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "try {",
              "  const data = pm.response.json();",
              "  pm.test('Has scores', function () {",
              "    pm.expect(data).to.have.property('scores');",
              "  });",
              "} catch(e) {}"
            ]
          }
        }
      ]
    },
    {
      "name": "Evaluate (JSON: imageUrl fallback)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/evaluate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "evaluate"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"brandId\": \"{{brandId}}\",\n  \"ruleId\": \"{{ruleId}}\",\n  \"imageUrl\": \"https://example.com/path/to/image.jpg\"\n}"
        },
        "description": "Evaluates an image by URL (server does not upload). Returns full JSON from upstream (n8n)."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('OK', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "try {",
              "  const data = pm.response.json();",
              "  pm.test('Has scores', function () {",
              "    pm.expect(data).to.have.property('scores');",
              "  });",
              "} catch(e) {}"
            ]
          }
        }
      ]
    }
  ]
}


